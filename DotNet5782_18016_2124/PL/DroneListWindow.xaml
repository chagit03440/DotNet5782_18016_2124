<Window x:Class="PL.DroneListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneListWindow" Height="640" Width="800">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" Height="auto" Grid.Row="0" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
            <ComboBox Name="comboStatusSelector" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.481,0.676" Margin="41,11,39,0" Height="43" SelectionChanged="comboStatusSelector_SelectionChanged"/>
            <ComboBox Name="comboMaxWeightSelector" Grid.Column="1" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.481,0.676" Margin="41,11,39,0" Height="43" SelectionChanged="comboMaxWeightSelector_SelectionChanged"/>
            <Label Content="Status Selector" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top"/>
            <Label Content="Max Weight Selector" Grid.Column="1" HorizontalAlignment="Center" Margin="0,47,0,0" VerticalAlignment="Top"/>
            <Label Content="Add Drone" Grid.Column="2" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top"/>
            <Label Content="Close" Grid.Column="3" HorizontalAlignment="Center" Margin="0,46,0,0"/>
            <Button Name="btnAddDrone" Content="Add drone" Grid.Column="2" HorizontalAlignment="Center" Margin="0,11,0,0" VerticalAlignment="Top" Height="35" Width="124" Click="btnAddDrone_Click"/>
            <Button Name="btnClose" Content="Close" Grid.Column="3" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top" Height="36" Width="126"/>
        </Grid>
        <ListView Grid.Row="1" x:Name="DronesListView" Margin="0,0,0,20"
                  Height="528" Width="790" MouseDoubleClick="ListView_MouseDoubleClick"/>
    </Grid>

</Window>
